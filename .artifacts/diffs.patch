-[ -f "$CLAIM_FILE" ] && cp "$CLAIM_FILE" "$TASK_DIR/claim.json"
+if [ -f "$CLAIM_FILE" ]; then
+    cp "$CLAIM_FILE" "$TASK_DIR/claim.json"
+
