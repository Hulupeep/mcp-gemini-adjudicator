{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "artifacts.index/v1.0",
  "title": "Artifacts Index Schema",
  "description": "Schema for artifacts.json index file listing all generated artifacts",
  "type": "object",
  "properties": {
    "task_id": {
      "type": "string",
      "description": "Task identifier"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when artifacts were generated"
    },
    "files": {
      "type": "array",
      "description": "List of artifact file paths relative to task directory",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1
    },
    "artifacts": {
      "type": "object",
      "description": "Map of file paths to metadata",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "size": {
            "type": "integer",
            "minimum": 0,
            "description": "File size in bytes"
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$",
            "description": "SHA256 hash of file contents"
          },
          "type": {
            "type": "string",
            "description": "MIME type or file type"
          }
        },
        "required": ["size", "sha256"]
      }
    }
  },
  "required": ["files"],
  "additionalProperties": true
}